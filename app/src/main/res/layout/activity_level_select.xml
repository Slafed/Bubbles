<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".LevelSelectActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:onClick="selectedLevel"
            android:id="@+id/button1"
            style="@style/AppThemeBright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/buttonMarginStart"
            android:layout_marginTop="@dimen/buttonMarginTop"
            android:background="@drawable/circles"
            android:text="1"/>

        <Button
            android:onClick="selectedLevel"
            android:id="@+id/button2"
            style="@style/AppThemeBright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/buttonMarginStart"
            android:layout_marginTop="@dimen/buttonMarginTop"
            android:background="@drawable/circles"
            android:text="2"/>

        <Button
            android:onClick="selectedLevel"
            android:id="@+id/button3"
            style="@style/AppThemeBright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/buttonMarginStart"
            android:layout_marginTop="@dimen/buttonMarginTop"
            android:background="@drawable/circles"
            android:text="3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:onClick="selectedLevel"
            android:id="@+id/button4"
            style="@style/AppThemeBright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/buttonMarginStart"
            android:layout_marginTop="@dimen/buttonMarginTop"
            android:background="@drawable/circles"
            android:text="4"/>

        <Button
            android:onClick="selectedLevel"
            android:id="@+id/button5"
            style="@style/AppThemeBright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/buttonMarginStart"
            android:layout_marginTop="@dimen/buttonMarginTop"
            android:background="@drawable/circles"
            android:text="5"/>
    </LinearLayout>

    <Button
        android:id="@+id/setBut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings" />

</LinearLayout>