<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Pop">

    <TextView
        android:id="@+id/popText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:padding="@dimen/topPadding"
        android:text="In campaign mode there will be a select
set of  levels in which the player must pop the bubbles before they reach
the top (to receive points) and avoid the bad bubbles. In endless mode
there will be a variety of bubbles that will rapidly appear which gets harder as time goes on (same concept applies)."
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/popText"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>