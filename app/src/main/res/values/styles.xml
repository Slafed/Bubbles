<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Text theme. -->
    <style name="AppThemeBright" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/fontLarge</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/aclonica</item>
    </style>

    <style name="editTextSettings">
        <item name="android:background">@color/highlight</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/editTextPadding</item>
        <item name="android:layout_width">@dimen/editTextWidth</item>
        <item name="android:layout_height">@dimen/editTextHeight</item>
    </style>

</resources>
